{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@antd-templater/library-3.x/library-declare",
      "vite/client"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.mjs",
    "**/*.vue",
  ],
  "exclude": [
    ".vitepress/cache",
    ".vitepress/dist",
    "src/mock/**/*",
    "node_modules"
  ]
}